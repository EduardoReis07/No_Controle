<?xml version='1.0' encoding='utf-8'?>
<widget id="io.eduardo.nocontrole" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>No Controle</name>
    <description>
        Uma aplicação que ajudará o usuário a fazer o controle de seus gastos pessoais.
    </description>
    <author email="" href="">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="orientation" value="portrait"/>
   <!--  <preference name="fullscreen" value="true"/> -->
	
    <preference name="AutoHideSplashScreen" value="true" />
	<preference name="SplashShowOnlyFirstTime" value="true|false" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value = "true" />
</widget>
